%% -*- erlang-indent-level: 2;indent-tabs-mode: nil -*-
[
  %% SASL config
  {sasl, [
      {sasl_error_logger, {file, "log/sasl-error.log"}},
        {errlog_type, error},
        {error_logger_mf_dir, "log/sasl"},      % Log directory
      {error_logger_mf_maxbytes, 10485760},   % 10 MB max file size
      {error_logger_mf_maxfiles, 5}           % 5 files max
    ]},
  %% unimate config
  {unimate, [
    {jabber_port, {{jabber_port}} },
    {jabber_server, {{jabber_server}} },
    {jabber_server_ip, {{jabber_server_ip}} },
    {jabber_server_tls, {{jabber_server_tls}} },
    {jabber_user, {{jabber_user}} },
    {jabber_nickname, {{jabber_nickname}} },
    {jabber_resource, {{jabber_resource}} },
    {jabber_password, {{jabber_password}} },
    {conference_server, {{conference_server}} },
    {broadcast_room, {{broadcast_room}} },
    {rooms, {{rooms}} },
    {listen_ip, {{listen_ip}} },
    {listen_port, {{listen_port}} }
    ]}
].
